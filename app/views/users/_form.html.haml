= simple_form_for @user do |f|
  = f.input :email,  input_html: {:class => 'span12' }

  = f.input :password, input_html: {:class => 'span12' }

  = f.input :password_confirmation,
    required: true,
    input_html: { :class => 'span12' }

  = f.button :submit,{:class => 'btn btn-success btn-block'}