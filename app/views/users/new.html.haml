- if @user.errors.any?
  %div.alert.alert-error
    %a.close{ 'data-dismiss' => 'alert'}
    %strong
      = pluralize(@user.errors.count, "error") + ' prohibited this comment from being saved:'
    %ul
      - @user.errors.full_messages.each do |msg|
        %li
          =msg

%div.container
  %div.row
    %div.span4.offset4.well
      %legend
        Please Sign Up

      = form_for @user do |f|
        = f.text_field :email, {:class => 'span12', :placeholder => 'email'}

        = f.password_field :password, {:class => 'span12', :placeholder => 'password'}

        = f.password_field :password_confirmation, {:class => 'span12', :placeholder => 'confirm password'}

        = f.submit 'Sign Up', :class => 'btn btn-success btn-block'



