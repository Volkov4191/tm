%div.container
  %div.row
    %div.span4.offset4.well
      %legend
        Please Sign In

      = form_tag sessions_path do

        = text_field_tag :email, params[:email], {:class => 'span12', :placeholder => 'email'}

        = password_field_tag :password, params[:password], {:class => 'span12', :placeholder => 'password'}

        = submit_tag 'Sign in', { :class => 'btn btn-info btn-block'}

        = link_to 'Sign Up', new_user_path, { :class => 'btn btn-success btn-block'}